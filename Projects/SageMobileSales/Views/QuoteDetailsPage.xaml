                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Image x:Uid="SelectedProductImage"
                                           Source="{Binding SelectedItem.ImageUri}" />
                                    <AppBarButton x:Name="DecrementQuantityButton"
                                                  x:Uid="DecrementQuantityButton"
                                                  Grid.Column="1"
                                                  Label="Remove"
                                                  Icon="Remove"
